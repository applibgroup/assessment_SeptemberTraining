<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical">

    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="Student ID Card"
        ohos:text_size="40vp"/>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:background_element="$graphic:background_box"
        ohos:padding="20vp"
        ohos:top_margin="100vp">

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="UR12CS171"
            ohos:text_size="30vp"
            ohos:layout_alignment="center"
            ohos:bottom_margin="20vp"/>

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="Name"
            ohos:text_size="15vp"/>
        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="Jarvo Singh"
            ohos:text_size="15vp"
            ohos:text_color="white"
            ohos:bottom_margin="10vp"/>

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="Department"
            ohos:text_size="15vp"/>
        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="Computer Science Engineering"
            ohos:text_size="15vp"
            ohos:text_color="white"
            ohos:bottom_margin="10vp"/>

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="University"
            ohos:text_size="15vp"/>
        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="Stanford University"
            ohos:text_size="15vp"
            ohos:text_color="white"
            ohos:bottom_margin="10vp"/>

    </DirectionalLayout>

</DirectionalLayout>