<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical">

    <TextField
        ohos:id="$+id:Name"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text="Name"
        ohos:text_alignment="left"
        ohos:padding="10vp"
        ohos:top_margin="20vp"
        ohos:right_margin="45vp"
        ohos:left_margin="45vp"
        ohos:text_color="#FF000000"
        ohos:text_size="35fp"
        ohos:background_element="$graphic:background_ability_main"
        />

    <TextField
        ohos:id="$+id:Email"
        ohos:below="$id:Name"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text="Email"
        ohos:padding="10vp"
        ohos:top_margin="20vp"
        ohos:right_margin="45vp"
        ohos:left_margin="45vp"
        ohos:text_color="#FF000000"
        ohos:text_size="35fp"
        ohos:background_element="$graphic:background_ability_main"
        />
    <TextField
        ohos:id="$+id:Password"
        ohos:below="$id:Email"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text="Password"
        ohos:padding="10vp"
        ohos:top_margin="20vp"
        ohos:right_margin="45vp"
        ohos:left_margin="45vp"
        ohos:text_color="#FF000000"
        ohos:text_size="35fp"
        ohos:text_font="Railway"
        ohos:background_element="$graphic:background_ability_main"
        />
    <TextField
        ohos:id="$+id:ConfirmPassword"
        ohos:below="$id:Password"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text="Confirm Password"
        ohos:padding="10vp"
        ohos:top_margin="20vp"
        ohos:right_margin="45vp"
        ohos:left_margin="45vp"
        ohos:text_color="#FF000000"
        ohos:text_size="35fp"
        ohos:background_element="$graphic:background_ability_main"
        />
    <Button
        ohos:id="$+id:Reset"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:below="$id:ConfirmPassword"
        ohos:text="Reset"
        ohos:text_size="20fp"
        ohos:text_font="monospace"
        ohos:text_alignment="right"
        ohos:padding="10vp"
        ohos:top_margin="20vp"
        ohos:right_margin="45vp"
        ohos:left_margin="235vp"
        ohos:background_element="$graphic:background_ability_main"
        />
    <Button
        ohos:id="$+id:SignUp"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:below="$id:Reset"
        ohos:text="Sign Up"
        ohos:text_size="20fp"
        ohos:text_font="monospace"
        ohos:text_alignment="center"
        ohos:padding="10vp"
        ohos:top_margin="30vp"
        ohos:right_margin="45vp"
        ohos:left_margin="45vp"
        ohos:background_element="$graphic:background_ability_main"
        />

</DependentLayout>