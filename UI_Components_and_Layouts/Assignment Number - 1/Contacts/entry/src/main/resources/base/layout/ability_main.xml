<?xml version="1.0" encoding="utf-8"?>

<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="top"
    ohos:orientation="vertical"
    >

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="vertical"
        >
        <Text
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:text="Contacts"
            ohos:text_size="40vp"
            ohos:text_color="#ffffff"
            ohos:background_element="#0000FF"
            ohos:padding="10vp"
            />
    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:left_padding="10vp"
        >
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:orientation="horizontal"
            ohos:top_margin="50vp"
            ohos:bottom_margin="20vp"
            >
        <Image
            ohos:height="match_parent"
            ohos:width="50vp"
            ohos:scale_mode="inside"
            ohos:image_src="$media:user"
            ohos:right_margin="10vp"
            />
        <TextField
            ohos:height="match_content"
            ohos:width="275vp"
            ohos:hint="Name"
            ohos:text_size="40vp"
            ohos:hint_color="#A9A9A9"
            ohos:background_element="#E8E8E8"
            ohos:bottom_margin="10vp"
            ohos:padding="5vp"
            />
        </DirectionalLayout>
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:orientation="horizontal"
            ohos:bottom_margin="20vp"
            >
            <Image
                ohos:height="match_parent"
                ohos:width="50vp"
                ohos:scale_mode="inside"
                ohos:image_src="$media:phone"
                ohos:right_margin="10vp"
                />
            <TextField
                ohos:height="match_content"
                ohos:width="140vp"
                ohos:hint="Phone"
                ohos:text_size="40vp"
                ohos:hint_color="#A9A9A9"
                ohos:background_element="#E8E8E8"
                ohos:bottom_margin="10vp"
                ohos:padding="5vp"
                ohos:right_margin="10vp"
                />
            <TextField
                ohos:height="match_content"
                ohos:width="125vp"
                ohos:hint="Area"
                ohos:text_size="40vp"
                ohos:hint_color="#A9A9A9"
                ohos:background_element="#E8E8E8"
                ohos:bottom_margin="10vp"
                ohos:padding="5vp"
                />
        </DirectionalLayout>
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:orientation="horizontal"
            ohos:bottom_margin="20vp"
            >
            <Image
                ohos:height="match_parent"
                ohos:width="50vp"
                ohos:scale_mode="inside"
                ohos:image_src="$media:placeholder"
                ohos:right_margin="10vp"
                />
            <TextField
                ohos:height="match_content"
                ohos:width="275vp"
                ohos:hint="Address"
                ohos:text_size="40vp"
                ohos:hint_color="#A9A9A9"
                ohos:background_element="#E8E8E8"
                ohos:bottom_margin="10vp"
                ohos:padding="5vp"
                />
        </DirectionalLayout>
        <TextField
            ohos:height="match_content"
            ohos:width="275vp"
            ohos:hint="City"
            ohos:text_size="40vp"
            ohos:hint_color="#A9A9A9"
            ohos:background_element="#E8E8E8"
            ohos:bottom_margin="30vp"
            ohos:padding="5vp"
            ohos:left_margin="60vp"
            />
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:orientation="horizontal"
            ohos:left_margin="60vp"
            ohos:bottom_margin="20vp"
            >
            <TextField
                ohos:height="match_content"
                ohos:width="130vp"
                ohos:hint="State"
                ohos:text_size="40vp"
                ohos:hint_color="#A9A9A9"
                ohos:background_element="#E8E8E8"
                ohos:bottom_margin="10vp"
                ohos:padding="5vp"
                ohos:right_margin="10vp"
                />
            <TextField
                ohos:height="match_content"
                ohos:width="135vp"
                ohos:hint="Zip"
                ohos:text_size="40vp"
                ohos:hint_color="#A9A9A9"
                ohos:background_element="#E8E8E8"
                ohos:bottom_margin="10vp"
                ohos:padding="5vp"
                />
        </DirectionalLayout>
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:orientation="horizontal"
            ohos:bottom_margin="20vp"
            >
            <Image
                ohos:height="match_parent"
                ohos:width="50vp"
                ohos:scale_mode="inside"
                ohos:image_src="$media:email"
                ohos:right_margin="10vp"
                />
            <TextField
                ohos:height="match_content"
                ohos:width="275vp"
                ohos:hint="Email"
                ohos:text_size="40vp"
                ohos:hint_color="#A9A9A9"
                ohos:background_element="#E8E8E8"
                ohos:bottom_margin="10vp"
                ohos:padding="5vp"
                />
        </DirectionalLayout>
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:orientation="horizontal"
            >
            <Image
                ohos:height="match_parent"
                ohos:width="50vp"
                ohos:scale_mode="inside"
                ohos:image_src="$media:cake"
                ohos:right_margin="10vp"
                />
            <TextField
                ohos:height="match_content"
                ohos:width="275vp"
                ohos:hint="Birthday"
                ohos:text_size="40vp"
                ohos:hint_color="#A9A9A9"
                ohos:background_element="#E8E8E8"
                ohos:padding="5vp"
                />
        </DirectionalLayout>
    </DirectionalLayout>

</DirectionalLayout>