<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:background_element="$media:girl"
    >

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:top_margin="10vp"
        ohos:orientation="horizontal"
        ohos:padding="10vp"
        >
        <Image
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:top_margin="3vp"
            ohos:image_src="$media:greenbackground"
            />
        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:text_alignment="center"
            ohos:text="SIGN UP"
            ohos:text_size="40vp"
            ohos:text_color="white"

            />
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:padding="10vp"
        >
        <Image
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:image_src="$media:email"
            ohos:top_margin="15vp"
            ohos:left_margin="15vp"
            />
        <TextField
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:text_color="white"
            ohos:hint="Email"
            ohos:left_margin="30vp"
            ohos:right_margin="20vp"
            ohos:text_size="20vp"
            ohos:padding="10vp"
            ohos:background_element="$graphic:background_ability_main3"
            />
    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:padding="10vp"
        >
        <Image
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:image_src="$media:password"
            ohos:top_margin="15vp"
            ohos:left_margin="12vp"
            />
        <TextField
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:hint="Password"
            ohos:left_margin="30vp"
            ohos:right_margin="20vp"
            ohos:text_size="20vp"
            ohos:text_color="white"
            ohos:padding="10vp"
            ohos:background_element="$graphic:background_ability_main3"
            />
    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:padding="10vp"
        >
        <Image
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:image_src="$media:username"
            ohos:top_margin="10vp"
            ohos:left_margin="15vp"
            />
        <TextField
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:hint="Username"
            ohos:left_margin="30vp"
            ohos:right_margin="20vp"
            ohos:text_size="20vp"
            ohos:text_color="white"
            ohos:padding="10vp"
            ohos:background_element="$graphic:background_ability_main3"
            />
    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:padding="10vp"
        >
        <Image
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:image_src="$media:calendar"
            ohos:top_margin="10vp"
            ohos:left_margin="15vp"
            />
        <TextField
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:hint="Date of birth"
            ohos:left_margin="30vp"
            ohos:right_margin="20vp"
            ohos:text_size="20vp"
            ohos:text_color="white"
            ohos:padding="10vp"
            ohos:background_element="$graphic:background_ability_main3"
            />
    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:padding="10vp"
        >
        <Image
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:image_src="$media:gender"
            ohos:top_margin="10vp"
            ohos:left_margin="15vp"
            />
        <TextField
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:hint="Gender"
            ohos:left_margin="30vp"
            ohos:right_margin="15vp"
            ohos:text_size="20vp"
            ohos:text_color="white"
            ohos:padding="10vp"
            ohos:background_element="$graphic:background_ability_main3"
            />
    </DirectionalLayout>
    <Button
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:layout_alignment="center"
        ohos:text="Sign Up"
        ohos:text_size="25vp"
        ohos:top_padding="10vp"
        ohos:bottom_padding="10vp"
        ohos:text_color="white"
        ohos:top_margin="15vp"
        ohos:left_margin="25vp"
        ohos:right_margin="25vp"
        />
    <Text
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text_alignment="center"
        ohos:top_margin="20vp"
        ohos:bottom_margin="5vp"
        ohos:text="or"
        ohos:text_size="20vp"
        ohos:text_color="white"
        />
    <Button
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:layout_alignment="center"
        ohos:text="Sign up with Facebook"
        ohos:text_color="white"
        ohos:text_size="25vp"
        ohos:top_padding="15vp"
        ohos:bottom_padding="15vp"
        ohos:right_padding="15vp"
        ohos:left_padding="15vp"
        ohos:top_margin="15vp"
        ohos:left_margin="25vp"
        ohos:right_margin="25vp"/>
    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:multiple_lines="true"
        ohos:text_color="white"
        ohos:text_size="12vp"
        ohos:top_margin="25vp"
        ohos:left_margin="20vp"
        ohos:right_margin="20vp"
        ohos:text_alignment="center"
        ohos:text="By signing up, you agree to Spotify's Privacy Policy and Terms and Conditions of Use."
        />

</DirectionalLayout>
