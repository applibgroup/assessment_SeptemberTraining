<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="left"
    ohos:orientation="vertical"
    ohos:margin="20vp">
    <DirectionalLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:alignment="left"
        ohos:orientation="horizontal"
        ohos:margin="20vp">
    <Image
        ohos:id="$+id:nameimg"
        ohos:height="50vp"
        ohos:width="50vp"
        ohos:image_src="$media:name"
        ohos:scale_x="2"
        ohos:scale_y="2"
        />

    <TextField
        ohos:id="$+id:name"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:background_element="$graphic:background_ability_main"
        ohos:layout_alignment="horizontal_center"
        ohos:hint="Name"
        ohos:text_size="40vp"
        ohos:basement="#2B2B2B"
        />
    </DirectionalLayout>
    <DirectionalLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:alignment="left"
        ohos:margin="20vp"
        ohos:orientation="horizontal">
        <Image
            ohos:id="$+id:phoneimg"
            ohos:height="50vp"
            ohos:width="50vp"
            ohos:image_src="$media:phone"
            ohos:scale_x="2"
            ohos:scale_y="2"
            />

        <TextField
            ohos:id="$+id:phone"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:background_element="$graphic:background_ability_main"
            ohos:layout_alignment="horizontal_center"
            ohos:hint="Phone"
            ohos:text_size="40vp"
            ohos:basement="#2B2B2B"
            />
        <TextField
            ohos:id="$+id:area"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:background_element="$graphic:background_ability_main"
            ohos:layout_alignment="horizontal_center"
            ohos:hint="Area"
            ohos:basement="#2B2B2B"
            ohos:left_margin="30vp"
            ohos:text_size="40vp"
            />

    </DirectionalLayout>
    <DirectionalLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:alignment="left"
        ohos:margin="20vp"
        ohos:orientation="horizontal">
        <Image
            ohos:id="$+id:adressimg"
            ohos:height="50vp"
            ohos:width="50vp"
            ohos:image_src="$media:address"
            ohos:scale_x="2"
            ohos:scale_y="2"
            />

        <TextField
            ohos:id="$+id:Address"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:background_element="$graphic:background_ability_main"
            ohos:layout_alignment="horizontal_center"
            ohos:hint="Address"
            ohos:text_size="40vp"
            ohos:basement="#2B2B2B"
            />
    </DirectionalLayout>
    <TextField
        ohos:id="$+id:City"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="$graphic:background_ability_main"
        ohos:layout_alignment="horizontal_center"
        ohos:hint="City"
        ohos:left_margin="65vp"
        ohos:right_margin="60vp"
        ohos:text_size="40vp"
        ohos:basement="#2B2B2B"
        />
    <DirectionalLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:alignment="left"
        ohos:margin="20vp"
        ohos:orientation="horizontal">
        <TextField
            ohos:id="$+id:state"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:background_element="$graphic:background_ability_main"
            ohos:layout_alignment="horizontal_center"
            ohos:hint="State"
            ohos:text_size="40vp"
            ohos:left_margin="45vp"
            ohos:basement="#2B2B2B"
            />
        <TextField
            ohos:id="$+id:zip"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:background_element="$graphic:background_ability_main"
            ohos:layout_alignment="horizontal_center"
            ohos:hint="Zip"
            ohos:basement="#2B2B2B"
            ohos:left_margin="30vp"
            ohos:text_size="40vp"
            />

    </DirectionalLayout>
    <DirectionalLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:alignment="left"
        ohos:orientation="horizontal"
        ohos:margin="20vp">
        <Image
            ohos:id="$+id:Emailimg"
            ohos:height="50vp"
            ohos:width="50vp"
            ohos:image_src="$media:mail"
            ohos:scale_x="2"
            ohos:scale_y="2"
            ohos:basement="#2B2B2B"
            />

        <TextField
            ohos:id="$+id:Email"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:background_element="$graphic:background_ability_main"
            ohos:layout_alignment="horizontal_center"
            ohos:hint="Mail"
            ohos:text_size="40vp"
            ohos:basement="#2B2B2B"
            />
    </DirectionalLayout>
    <DirectionalLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:alignment="left"
        ohos:orientation="horizontal"
        ohos:margin="20vp">
        <Image
            ohos:id="$+id:bdayimg"
            ohos:height="50vp"
            ohos:width="50vp"
            ohos:image_src="$media:bday"
            ohos:scale_x="2"
            ohos:scale_y="2"
            />

        <TextField
            ohos:id="$+id:bday"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:background_element="$graphic:background_ability_main"
            ohos:layout_alignment="horizontal_center"
            ohos:hint="Birthday"
            ohos:text_size="40vp"
            ohos:basement="#2B2B2B"
            />
    </DirectionalLayout>



</DirectionalLayout>