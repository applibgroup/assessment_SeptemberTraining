<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:id="$+id:scrollview"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="#FFDEAD"
    ohos:top_margin="32vp"
    ohos:bottom_padding="16vp"
    ohos:layout_alignment="horizontal_center">
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    >
    <Image
        ohos:id="$+id:nameimg"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:image_src="$media:name"
        ohos:top_padding="15fp"
        ohos:left_padding="0fp"
        ohos:scale_x="0.6"
        ohos:scale_y="0.6"
        />

    <TextField
        ohos:id="$+id:name"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:left_margin="10vp"
        ohos:top_margin="25fp"
        ohos:bottom_margin="30vp"
        ohos:left_padding="90fp"
        ohos:right_padding="90fp"
        ohos:top_padding="5fp"
        ohos:hint="Name"
        ohos:text_size="30fp"
        ohos:background_element="$graphic:background_text_field"
        ohos:basement="#FF0A0A0A"
        ohos:end_of="$id:nameimg"
       />

    <Image
        ohos:id="$+id:phoneimg"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:image_src="$media:phone"
        ohos:top_padding="25fp"
        ohos:left_padding="10fp"
        ohos:scale_x="0.6"
        ohos:scale_y="0.6"
        ohos:below="$id:nameimg"
        />

    <TextField
        ohos:id="$+id:phone"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:left_margin="0fp"
        ohos:top_margin="10fp"
        ohos:bottom_margin="30vp"
        ohos:left_padding="30fp"
        ohos:right_padding="30fp"
        ohos:top_padding="5fp"
        ohos:hint="Phone"
        ohos:text_size="30fp"
        ohos:background_element="$graphic:background_text_field"
        ohos:basement="#FF0A0A0A"
        ohos:below="$id:name"
        ohos:end_of="$id:phoneimg"
        />
    <TextField
        ohos:id="$+id:area"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:left_margin="10vp"
        ohos:top_margin="10fp"
        ohos:bottom_margin="30vp"
        ohos:left_padding="20fp"
        ohos:right_padding="20fp"
        ohos:top_padding="5fp"
        ohos:hint="Area"
        ohos:text_size="30fp"
        ohos:background_element="$graphic:background_text_field"
        ohos:basement="#FF0A0A0A"
        ohos:below="$id:name"
        ohos:end_of="$id:phone"
        />

    <Image
        ohos:id="$+id:addrimg"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:image_src="$media:location"
        ohos:top_padding="25fp"
        ohos:left_padding="10fp"
        ohos:scale_x="0.6"
        ohos:scale_y="0.6"
        ohos:below="$id:phoneimg"
        />

    <TextField
        ohos:id="$+id:address"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:left_margin="5fp"
        ohos:top_margin="10fp"
        ohos:bottom_margin="30vp"
        ohos:left_padding="28fp"
        ohos:right_padding="115fp"
        ohos:top_padding="5fp"
        ohos:hint="Address"
        ohos:text_size="30fp"
        ohos:background_element="$graphic:background_text_field"
        ohos:basement="#FF0A0A0A"
        ohos:end_of="$id:addrimg"
        ohos:below="$id:phone"
        />
    <TextField
        ohos:id="$+id:city"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:left_margin="80fp"
        ohos:top_margin="10fp"
        ohos:bottom_margin="30vp"
        ohos:left_padding="28fp"
        ohos:right_padding="175fp"
        ohos:top_padding="5fp"
        ohos:hint="City"
        ohos:text_size="30fp"
        ohos:background_element="$graphic:background_text_field"
        ohos:basement="#FF0A0A0A"
        ohos:below="$id:address"
        />

    <TextField
        ohos:id="$+id:state"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:left_margin="75fp"
        ohos:top_margin="10fp"
        ohos:bottom_margin="30vp"
        ohos:left_padding="40fp"
        ohos:right_padding="40fp"
        ohos:top_padding="5fp"
        ohos:hint="State"
        ohos:text_size="30fp"
        ohos:background_element="$graphic:background_text_field"
        ohos:basement="#FF0A0A0A"
        ohos:below="$id:city"

        />
    <TextField
        ohos:id="$+id:zip"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:left_margin="10vp"
        ohos:top_margin="10fp"
        ohos:bottom_margin="30vp"
        ohos:left_padding="30fp"
        ohos:right_padding="30fp"
        ohos:top_padding="5fp"
        ohos:hint="Zip"
        ohos:text_size="30fp"
        ohos:background_element="$graphic:background_text_field"
        ohos:basement="#FF0A0A0A"
        ohos:below="$id:city"
        ohos:end_of="$id:state"
        />

    <Image
        ohos:id="$+id:emailimg"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:image_src="$media:email"
        ohos:left_padding="10fp"
        ohos:scale_x="0.8"
        ohos:scale_y="0.8"
        ohos:below="$id:state"
        />

    <TextField
        ohos:id="$+id:email"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:left_margin="80fp"
        ohos:top_margin="10fp"
        ohos:bottom_margin="30vp"
        ohos:left_padding="28fp"
        ohos:right_padding="155fp"
        ohos:top_padding="5fp"
        ohos:hint="Email"
        ohos:text_size="30fp"
        ohos:background_element="$graphic:background_text_field"
        ohos:basement="#FF0A0A0A"
        ohos:below="$id:state"
        />

    <Image
        ohos:id="$+id:dobimg"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:image_src="$media:birth"
        ohos:left_padding="10fp"
        ohos:scale_x="0.8"
        ohos:scale_y="0.8"
        ohos:below="$id:email"
        ohos:right_padding="10fp"
        />

    <DatePicker
        ohos:height="match_content"
        ohos:width="250vp"
        ohos:id="$+id:date_picker"
        ohos:date_order="day-month-year"
        ohos:normal_text_color="#FF7A7A7A"
        ohos:normal_text_size="25fp"
        ohos:layout_alignment="center"
        ohos:left_margin="40fp"
        ohos:selected_text_color="#FF030303"
        ohos:selected_text_size="20fp"
        ohos:end_of="$media:birth"
        ohos:below="$id:email"
        ohos:left_padding="60fp"

        />
</DependentLayout>
</ScrollView>