<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:id="$+id:scrollview"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="#50000000"
    ohos:bottom_padding="16vp"
    ohos:layout_alignment="horizontal_center"
    ohos:top_margin="32vp">

    <DirectionalLayout
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:orientation="vertical">

        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:bottom_margin="0fp"
            ohos:left_padding="10fp"
            ohos:top_padding="10fp"
            ohos:text="Personal"
            ohos:text_color="#111"
            ohos:text_size="30fp"
            />

        <Text
            ohos:height="1fp"
            ohos:width="match_parent"
            ohos:background_element="#111"
            ohos:margin="10fp"
            ohos:top_margin="0fp"
            />

        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:start_margin="10fp"
            ohos:text="Name"
            ohos:text_size="22fp"
            />

        <TextField
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:background_element="#f2f2f2"
            ohos:hint="Mahesh Dasika"
            ohos:hint_color="#50000000"
            ohos:margin="10fp"
            ohos:padding="10fp"
            ohos:text_size="18fp"
            ohos:top_margin="2fp"
            />

        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:start_margin="10fp"
            ohos:text="Date of Birth"
            ohos:text_size="22fp"
            />


        <DependentLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:margin="10fp"
            >

            <TextField
                ohos:id="$+id:month"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:background_element="#f2f2f2"
                ohos:left_margin="10fp"
                ohos:padding="10fp"
                ohos:right_margin="20fp"
                ohos:right_padding="30fp"
                ohos:text="Month"
                ohos:text_size="18fp"
                />

            <TextField
                ohos:id="$+id:day"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:background_element="#f2f2f2"
                ohos:padding="10fp"
                ohos:right_margin="20fp"
                ohos:right_of="$id:month"
                ohos:right_padding="50fp"
                ohos:text="Day"
                ohos:text_size="18fp"
                />

            <TextField
                ohos:id="$+id:year"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:background_element="#f2f2f2"
                ohos:padding="10fp"
                ohos:right_of="$id:day"
                ohos:right_padding="50fp"
                ohos:text="Year"
                ohos:text_size="18fp"
                />

        </DependentLayout>

        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:start_margin="10fp"
            ohos:text="What is your spirit animal?"
            ohos:text_size="22fp"
            />


        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:margin="10fp"
            ohos:orientation="horizontal"
            >

            <TextField
                ohos:id="$+id:Lion"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:background_element="#f2f2f2"
                ohos:padding="10fp"
                ohos:right_padding="15fp"
                ohos:text="Lion"
                ohos:text_color="#50000000"
                ohos:text_size="18fp"
                />

            <Text
                ohos:id="$+id:b1"
                ohos:height="44fp"
                ohos:width="2fp"
                ohos:background_element="#50000000"
                />

            <TextField
                ohos:id="$+id:Tiger"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:background_element="#f2f2f2"
                ohos:padding="10fp"
                ohos:right_padding="15fp"
                ohos:text="Tiger"
                ohos:text_color="#50000000"
                ohos:text_size="18fp"
                />

            <Text
                ohos:height="44fp"
                ohos:width="2fp"
                ohos:background_element="#50000000"
                />

            <TextField
                ohos:id="$+id:Bear"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:background_element="#f2f2f2"
                ohos:padding="10fp"
                ohos:right_padding="15fp"
                ohos:text="Bear"
                ohos:text_color="#50000000"
                ohos:text_size="18fp"
                />

            <Text
                ohos:height="44fp"
                ohos:width="2fp"
                ohos:background_element="#50000000"
                />

            <TextField
                ohos:id="$+id:bull"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:background_element="#f2f2f2"
                ohos:padding="10fp"
                ohos:right_padding="15fp"
                ohos:text="Bull"
                ohos:text_color="#50000000"
                ohos:text_size="18fp"
                />

            <Text
                ohos:height="44fp"
                ohos:width="2fp"
                ohos:background_element="#50000000"
                />

            <TextField
                ohos:id="$+id:serval"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:background_element="#f2f2f2"
                ohos:padding="10fp"
                ohos:right_padding="15fp"
                ohos:text="Serval"
                ohos:text_color="#50000000"
                ohos:text_size="18fp"
                />
        </DirectionalLayout>

        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:bottom_margin="0fp"
            ohos:left_padding="10fp"
            ohos:text="Account"
            ohos:text_color="#111"
            ohos:text_size="30fp"
            />

        <Text
            ohos:height="1fp"
            ohos:width="match_parent"
            ohos:background_element="#111"
            ohos:margin="10fp"
            ohos:top_margin="0fp"
            />

        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:left_margin="10fp"
            ohos:text="Email"
            ohos:text_size="22fp"
            />

        <TextField
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:background_element="#f2f2f2"
            ohos:hint="sample@gmail.com"
            ohos:hint_color="#50000000"
            ohos:margin="10fp"
            ohos:padding="10fp"
            ohos:text_size="18fp"
            ohos:top_margin="2fp"
            ohos:bottom_margin="30fp"
            />

        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:left_margin="10fp"
            ohos:text="Password"
            ohos:text_size="22fp"
            />

        <TextField
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:background_element="#f2f2f2"
            ohos:text_input_type="pattern_password"
            ohos:hint_color="#50000000"
            ohos:margin="10fp"
            ohos:padding="10fp"
            ohos:text_size="18fp"
            ohos:top_margin="2fp"
            />


        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:bottom_margin="0fp"
            ohos:left_padding="10fp"
            ohos:text="Contact"
            ohos:text_color="#111"
            ohos:text_size="30fp"
            />

        <Text
            ohos:height="1fp"
            ohos:width="match_parent"
            ohos:background_element="#111"
            ohos:margin="10fp"
            ohos:top_margin="0fp"
            />

        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:left_margin="10fp"
            ohos:text="Address"
            ohos:text_size="22fp"
            />

        <TextField
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:background_element="#f2f2f2"
            ohos:hint="India"
            ohos:hint_color="#50000000"
            ohos:margin="10fp"
            ohos:padding="10fp"
            ohos:text_size="18fp"
            ohos:top_margin="2fp"
            ohos:bottom_margin="30fp"
            />

        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:left_margin="10fp"
            ohos:text="City"
            ohos:text_size="22fp"
            />

        <TextField
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:background_element="#f2f2f2"
            ohos:text_input_type="pattern_password"
            ohos:hint_color="#50000000"
            ohos:hint="Select ypur State"
            ohos:margin="10fp"
            ohos:padding="10fp"
            ohos:text_size="18fp"
            ohos:top_margin="2fp"
            />

        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:left_margin="10fp"
            ohos:text="Phone"
            ohos:text_size="22fp"
            />

        <TextField
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:background_element="#f2f2f2"
            ohos:text_input_type="pattern_number"
            ohos:hint_color="#50000000"
            ohos:hint="1234567890"
            ohos:margin="10fp"
            ohos:padding="10fp"
            ohos:text_size="18fp"
            ohos:top_margin="2fp"
            />

    </DirectionalLayout>
</ScrollView>