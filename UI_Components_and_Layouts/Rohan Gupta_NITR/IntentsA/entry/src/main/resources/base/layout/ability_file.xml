<ScrollView
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"

    >
    <DirectionalLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="$media:user"
        ohos:orientation="vertical">


        <Text
            ohos:id="$+id:Register"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="Register"
            ohos:text_size="50fp"
            ohos:text_font="sans-serif-medium"
            ohos:layout_alignment="center"
            ohos:top_margin="30fp"


            />
        <TextField
            ohos:id="$+id:name"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:hint="StudentName"
            ohos:left_margin="30fp"
            ohos:top_margin="20fp"
            ohos:text_size="30fp"
            ohos:background_element="$graphic:register_background_textfield"
            ohos:right_padding="150fp"
            ohos:left_padding="30fp"
            />


        <TextField
            ohos:id="$+id:rollno"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:hint="RollNo"
            ohos:left_margin="30fp"
            ohos:top_margin="20fp"
            ohos:text_size="30fp"
            ohos:background_element="$graphic:register_background_textfield"
            ohos:right_padding="218fp"
            ohos:left_padding="30fp"
            />


        <TextField
            ohos:id="$+id:dept"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:hint="DepartmentName"
            ohos:left_margin="30fp"
            ohos:top_margin="20fp"
            ohos:text_size="30fp"
            ohos:background_element="$graphic:register_background_textfield"
            ohos:right_padding="115fp"
            ohos:left_padding="30fp"
            />

        <TextField
            ohos:id="$+id:collegename"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:hint="CollegeName"
            ohos:left_margin="30fp"
            ohos:top_margin="20fp"
            ohos:text_size="30fp"
            ohos:background_element="$graphic:register_background_textfield"
            ohos:right_padding="155fp"
            ohos:left_padding="30fp"
            />

        <TextField
            ohos:id="$+id:universityname"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:hint="UniversityName"
            ohos:left_margin="30fp"
            ohos:top_margin="20fp"
            ohos:text_size="30fp"
            ohos:background_element="$graphic:register_background_textfield"
            ohos:right_padding="135fp"
            ohos:left_padding="30fp"
            />

        <Text
            ohos:id="$+id:gender"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="Gender"
            ohos:text_size="30fp"
            ohos:top_margin="20fp"
            ohos:left_margin="30fp"
            />
        <RadioContainer
            ohos:id="$+id:radio_container"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:top_margin="10vp"
            ohos:left_margin="30fp"
            ohos:orientation="horizontal">
            <RadioButton
                ohos:id="$+id:radio_button_1"
                ohos:height="40vp"
                ohos:width="match_content"
                ohos:text="Male"
                ohos:left_margin="30fp"
                ohos:right_margin="50fp"
                ohos:text_size="30fp"/>

            <RadioButton
                ohos:id="$+id:radio_button_2"
                ohos:height="40vp"
                ohos:width="match_content"
                ohos:text="Female"
                ohos:text_size="30fp"/>
        </RadioContainer>

        <Button
            ohos:id="$+id:button"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:text_size="27fp"
            ohos:layout_alignment="horizontal_center"
            ohos:text="SignUp"
            ohos:text_color="$ohos:color:id_color_bottom_tab_icon_auxcolor01_dark"
            ohos:background_element="$graphic:button_element"
            ohos:top_margin="40fp"
            ohos:left_margin="30vp"
            ohos:bottom_margin="20vp"
            ohos:right_padding="15vp"
            ohos:left_padding="15vp"
            ohos:clickable= "true"
            />
    </DirectionalLayout>
</ScrollView>