<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical">

    <Text
        ohos:id="$+id:idCard"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:layout_alignment="center"
        ohos:text="Student Id Card"
        ohos:bottom_margin="100vp"
        ohos:text_size="40vp"
        />
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:margin="40vp"
        ohos:left_margin="10vp"
        ohos:right_margin="10vp"
        ohos:padding="20vp"
        ohos:background_element="$graphic:background_ability_id_card"
        >
        <Text
            ohos:id="$+id:rollno"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="center"
            ohos:text="XXXXXXXXXX"
            ohos:padding="10vp"
            ohos:text_size="30vp"
            />
        <Text
            ohos:id="$+id:n"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="left"
            ohos:text="Name"
            ohos:text_color="#0B4992"
            ohos:text_size="20vp"
            />
        <Text
            ohos:id="$+id:name"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="left"
            ohos:text="XXXXXXX"
            ohos:padding="10vp"
            ohos:text_color="#FFFFFFFF"
            ohos:text_size="20vp"
            />
        <Text
            ohos:id="$+id:d"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="left"
            ohos:text="Department"
            ohos:text_color="#0B4992"
            ohos:text_size="20vp"
            />
        <Text
            ohos:id="$+id:department"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="left"
            ohos:text="XXXXXXX"
            ohos:padding="10vp"
            ohos:text_color="#FFFFFFFF"
            ohos:text_size="20vp"
            />
        <Text
            ohos:id="$+id:u"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="left"
            ohos:text="University"
            ohos:text_color="#0B4992"

            ohos:text_size="20vp"
            />
        <Text
            ohos:id="$+id:university"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="left"
            ohos:text="XXXXXXX"
            ohos:padding="10vp"
            ohos:text_color="#FFFFFFFF"
            ohos:text_size="20vp"
            />
    </DirectionalLayout>

</DirectionalLayout>