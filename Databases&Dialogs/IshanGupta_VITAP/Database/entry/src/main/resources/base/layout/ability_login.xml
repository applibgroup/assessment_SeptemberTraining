<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:padding="30vp"
    ohos:orientation="vertical">
    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="LOGIN"
        ohos:text_size="40vp"
        ohos:padding="50vp"
        ohos:margin="30vp"
        ohos:top_margin="400vp"
        ohos:layout_alignment="center"/>

    <TextField
        ohos:id="$+id:lemail"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:focus_border_enable="true"
        ohos:hint="Email"
        ohos:padding="5vp"
        ohos:bottom_margin="20vp"
        ohos:text_size="20vp"
        ohos:background_element="$graphic:border_field"
        />
    <TextField
        ohos:id="$+id:lpass"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:focus_border_enable="true"
        ohos:hint="Password"
        ohos:text_input_type="pattern_password"
        ohos:padding="5vp"
        ohos:bottom_margin="20vp"
        ohos:text_size="20vp"
        ohos:background_element="$graphic:border_field"
        />
        <Button
        ohos:id="$+id:lgnbtn"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="LOGIN"
        ohos:text_size="18vp"
        ohos:background_element="$graphic:border_field_signup"
        ohos:text_color="white"
        ohos:focus_border_enable="true"
        ohos:layout_alignment="center"
        ohos:top_margin="200vp"
        ohos:padding="15vp"
        ohos:right_padding="30vp"
        ohos:left_padding="30vp"/>
    <Button
        ohos:id="$+id:lstwbtn"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="Switch to Signup"
        ohos:text_size="12vp"
        ohos:background_element="$graphic:border_field_signup"
        ohos:text_color="white"
        ohos:focus_border_enable="true"
        ohos:layout_alignment="center"
        ohos:top_margin="20vp"
        ohos:padding="5vp"
        ohos:right_padding="15vp"
        ohos:left_padding="15vp"/>

</DirectionalLayout>