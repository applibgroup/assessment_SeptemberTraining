<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:padding="30vp"
    ohos:orientation="vertical">
    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="REGISTER"
        ohos:text_size="40vp"
        ohos:padding="10vp"
        ohos:margin="30vp"
        ohos:layout_alignment="center"/>
    <TextField
        ohos:id="$+id:usrname"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:focus_border_enable="true"
        ohos:hint="Name"
        ohos:padding="5vp"
        ohos:bottom_margin="20vp"
        ohos:text_size="20vp"
        ohos:background_element="$graphic:border_field"
        />
    <TextField
        ohos:id="$+id:usremail"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:focus_border_enable="true"
        ohos:hint="Email"
        ohos:padding="5vp"
        ohos:bottom_margin="20vp"
        ohos:text_size="20vp"
        ohos:background_element="$graphic:border_field"
        />
    <TextField
        ohos:id="$+id:usrpass"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:focus_border_enable="true"
        ohos:hint="Password"
        ohos:text_input_type="pattern_password"
        ohos:padding="5vp"
        ohos:bottom_margin="20vp"
        ohos:text_size="20vp"
        ohos:background_element="$graphic:border_field"
        />
    <TextField
        ohos:id="$+id:usrcpass"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:focus_border_enable="true"
        ohos:hint="Confirm Password"
        ohos:text_input_type="pattern_password"
        ohos:padding="5vp"
        ohos:text_size="20vp"
        ohos:background_element="$graphic:border_field"
        />
    <Button
        ohos:id="$+id:rstbtn"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="Reset"
        ohos:text_size="15vp"
        ohos:background_element="$graphic:border_field_reset"
        ohos:focus_border_enable="true"
        ohos:layout_alignment="right"
        ohos:top_margin="15vp"
        ohos:padding="5vp"
        ohos:text_color="white"
        />

    <Button
        ohos:id="$+id:signbtn"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="Sign up"
        ohos:text_size="18vp"
        ohos:background_element="$graphic:border_field_signup"
        ohos:text_color="white"
        ohos:focus_border_enable="true"
        ohos:layout_alignment="center"
        ohos:top_margin="20vp"
        ohos:padding="15vp"
        ohos:right_padding="30vp"
        ohos:left_padding="30vp"/>
    <Button
        ohos:id="$+id:stwbtn"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="Switch to Login"
        ohos:text_size="12vp"
        ohos:background_element="$graphic:border_field_signup"
        ohos:text_color="white"
        ohos:focus_border_enable="true"
        ohos:layout_alignment="center"
        ohos:top_margin="20vp"
        ohos:padding="5vp"
        ohos:right_padding="15vp"
        ohos:left_padding="15vp"/>

</DirectionalLayout>