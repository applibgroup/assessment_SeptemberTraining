<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:id="$+id:scrollview"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:top_margin="32vp"
    ohos:background_element="#FFF5F5B1"
    ohos:layout_alignment="horizontal_center">
    <DirectionalLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="#FFF5F5B1"
        ohos:orientation="vertical">

        <Text
            ohos:id="$+id:text_Register"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="horizontal_center"
            ohos:text="Register"
            ohos:top_margin="30fp"
            ohos:text_size="40vp"
            />

        <TextField
            ohos:id="$+id:Name"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:hint="Student Name"
            ohos:text_size="30fp"
            ohos:background_element="$graphic:background_ability_main"
            ohos:text_color="#FF090909"
            ohos:bottom_margin="10fp"
            ohos:element_padding="10fp"
            ohos:basement="#FFF7F7FA"
            ohos:top_margin="20fp"
            ohos:alpha="0.7"
            ohos:hint_color="#FF100F0F"
            ohos:left_margin="30fp"
            ohos:left_padding="50fp"
            ohos:right_padding="50fp"
            />
        <TextField
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:id="$+id:Rollno"
            ohos:hint="Roll No"
            ohos:background_element="$graphic:background_ability_main"
            ohos:text_size="30fp"
            ohos:text_color="#FF090909"
            ohos:bottom_margin="10fp"
            ohos:left_padding="95fp"
            ohos:right_padding="95fp"
            ohos:element_padding="10fp"
            ohos:scale_mode="inside"
            ohos:alpha="0.7"
            ohos:basement="#FFF7F7FA"
            ohos:top_margin="10fp"
            ohos:hint_color="#FF100F0F"
            ohos:left_margin="35fp"
            />

        <TextField
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:id="$+id:Department"
            ohos:hint="Department Name"
            ohos:background_element="$graphic:background_ability_main"
            ohos:text_size="30fp"
            ohos:alpha="0.7"
            ohos:text_color="#FF090909"
            ohos:bottom_margin="10fp"
            ohos:element_padding="10fp"
            ohos:basement="#FFF7F7FA"
            ohos:top_margin="10fp"
            ohos:hint_color="#FF100F0F"
            ohos:left_margin="40fp"
            ohos:left_padding="15fp"
            ohos:right_padding="15fp"
            />

        <TextField
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:id="$+id:College"
            ohos:background_element="$graphic:background_ability_main"
            ohos:hint="College Name"
            ohos:text_size="30fp"
            ohos:alpha="0.7"
            ohos:text_color="#FF090909"
            ohos:element_padding="10fp"
            ohos:basement="#FFF7F7FA"
            ohos:top_margin="10fp"
            ohos:hint_color="#FF100F0F"
            ohos:left_margin="40fp"
            ohos:left_padding="45fp"
            ohos:right_padding="45fp"
            />
        <TextField
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:id="$+id:University"
            ohos:hint="University Name"
            ohos:text_size="30fp"
            ohos:background_element="$graphic:background_ability_main"
            ohos:text_color="#FF090909"
            ohos:alpha="0.7"
            ohos:element_padding="10fp"
            ohos:bottom_margin="10fp"
            ohos:basement="#FFF7F7FA"
            ohos:top_margin="20fp"
            ohos:hint_color="#FF100F0F"
            ohos:left_margin="40fp"
            ohos:left_padding="28fp"
            ohos:right_padding="28fp"
            />
        <Text
            ohos:id="$+id:text_Gender"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:background_element="#FFFFFF"
            ohos:text="Gender"
            ohos:top_margin="10fp"
            ohos:left_margin="40fp"
            ohos:text_size="30fp"
            ohos:alpha="0.7"
            />

        <RadioContainer
            ohos:id="$+id:radio_container"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:top_margin="10fp"
            ohos:left_margin="35fp"
            ohos:orientation="horizontal">
            <RadioButton
                ohos:id="$+id:radio_button_male"
                ohos:height="40vp"
                ohos:width="match_content"
                ohos:text="Male"
                ohos:alpha="0.7"
                ohos:right_padding="20fp"
                ohos:text_size="30fp"/>
            <RadioButton
                ohos:id="$+id:radio_button_female"
                ohos:height="40vp"
                ohos:width="match_content"
                ohos:text="Female"
                ohos:alpha="0.7"
                ohos:text_size="30fp"/>
        </RadioContainer>
        <Button
            ohos:id="$+id:button"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:text_size="35fp"
            ohos:text="Login"
            ohos:background_element="$graphic:background_ability_main"
            ohos:left_margin="10fp"
            ohos:bottom_margin="15vp"
            ohos:right_padding="15vp"
            ohos:left_padding="15vp"
            ohos:layout_alignment="center"
            ohos:text_color="#FF100F0F"
            ohos:top_margin="50fp"

            />
    </DirectionalLayout>
</ScrollView>